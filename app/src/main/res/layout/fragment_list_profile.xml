<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:fab="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white_pressed"
android:orientation="vertical">

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_height"
        android:scaleType="centerCrop"

        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/editprof"
        android:layout_gravity="center"
        android:background="@drawable/light_edit"
        android:layout_below="@+id/imageUser"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/email_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_pressed"
        android:orientation="vertical"
        android:layout_below="@+id/editprof"
        android:paddingTop="15dp">

        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:id="@+id/label_email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="50px" />
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:id="@+id/label_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/cardview_dark_background" />
        <TextView

            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="50px" />
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:id="@+id/label_job_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textColor="@color/cardview_dark_background" />
        <TextView

            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="50px" />
        <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            android:id="@+id/label_dob_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textColor="@color/cardview_dark_background" />
        <TextView

            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:clickable="false"
            android:ellipsize="end"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="@color/cardview_dark_background"
            android:textSize="50px" />


    </LinearLayout>


<com.getbase.floatingactionbutton.FloatingActionsMenu
    android:id="@+id/multiple_actions"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    fab:fab_addButtonColorNormal="@color/md_red_500"
    fab:fab_addButtonColorPressed="@color/md_red_400"
    fab:fab_addButtonPlusIconColor="@color/white"
    fab:fab_labelStyle="@style/menu_labels_style"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_Spouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s50"
        fab:fab_title="Spouse"
        fab:fab_colorPressed="@null"
        fab:fab_colorNormal="@color/white"
        fab:fab_size="mini"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_Children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/c50"
        fab:fab_title="Children"
        fab:fab_colorNormal="@color/white"
        fab:fab_size="mini"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_Brother"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/b50"
        fab:fab_title="Brother"
        fab:fab_colorNormal="@color/white"
        fab:fab_size="mini"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_Parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/p50"
        fab:fab_title="Parent"
        fab:fab_colorNormal="@color/white"
        fab:fab_size="mini"/>
</com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>